{
  "name": "leitner",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --hot src/index.ts",
    "build": "bun build ./src/index.ts --compile --bytecode --minify --outfile leitner",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "lint": "biome check",
    "lint:fix": "biome check --fix",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "^0.18.3",
    "hono": "^4.6.19",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "typescript": "^5.7.3"
  }
}
